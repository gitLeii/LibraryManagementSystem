
@model IEnumerable<LibraryManagement.Models.Issue>
@{
    ViewData["Title"] = "Index";
}

<form asp-action="MaxIssues" method="post">
    Maximum Allowed Issues: @ViewBag.Settings
    <div class="form-group col-md-3 d-inline-block"> 
        <input name="maxReserve" class=" my-2 d-inline-flex" />        
            
        <input type="submit" value="Update" class="btn btn-success" />              
    </div>        
</form>


<h2>Issue Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BookId)</th>
            <th>@Html.DisplayNameFor(model => model.StudentId)</th>            
            <th>@Html.DisplayNameFor(model => model.IssueDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var item in Model.Where(x => x.Status == Status.Reserved)
                .ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDate)
                </td>
                <td>                    
                    <form asp-action="Issue" asp-route-id="@item.IssueId" method="post">
                        <div class="form-group">            
                            @Html.HiddenFor(modelItem => item.IssueId)
                            <input type="submit" value="Issue" class="btn btn-success" />              
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BookId)</th>
            <th>@Html.DisplayNameFor(model => model.StudentId)</th>            
            <th>@Html.DisplayNameFor(model => model.IssueDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var item in Model.Where(x => x.Status == Status.Issued)
                .ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDate)
                </td>
                <td>                    
                    <form asp-controller="Book" asp-action="Return" asp-route-id="@item.BooksPartialId" method="post">
                        <div class="form-group">            
                            @Html.HiddenFor(modelItem => item.IssueId)
                            <input type="submit" value="Return" class="btn btn-danger" />              
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>