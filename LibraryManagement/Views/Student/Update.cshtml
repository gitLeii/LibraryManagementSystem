@model LibraryManagement.Models.Student
@{
    ViewData["Title"] = "Update";
}

<h3>Update Your Details</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            @Html.HiddenFor(model => model.Email)
            <div class="form-group">
                <label asp-for="Faculty" class="control-label"></label>
                <select class="form-control" asp-for="Faculty" asp-items="Html.GetEnumSelectList<Faculty>()">
                <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Faculty" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => model.Fine)
            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

